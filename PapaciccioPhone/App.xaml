<Application
    x:Class="PapaciccioPhone.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PapaciccioPhone">

    <Application.Resources>
        <x:String x:Key="AppName">PapaCiccio</x:String>

        <Color x:Key="PageBackgroundColor">#0D8FA8</Color>
        
        <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackgroundColor}" />
        
        <Style TargetType="CommandBar">
            <Setter Property="Background" Value="#075463" />
        </Style>
    </Application.Resources>
    
</Application>